@model AppUser
@{
    Layout = "_AdminLayout";
}

<h1 class="text-center">Sales for @Model.Name</h1>

<div class="text-center">
    @if (Model.Sales.Count() == 0)
    {
        <div>
            <p>They haven't made a sale yet</p>
        </div>
    }
    else
    {
        <table class="table table-striped" style="width:100%">
            <tr>
                <th>Sale Amt</th>
                <th>Sale Date</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (Sale s in Model.Sales)
            {
                <tr>
                    <td>@s.SaleAmount.ToString("c")</td>
                    <td>@s.SaleDate.ToString("MM/dd/yyyy")</td>
                    <td><a asp-action="UpdateSale" asp-route-id="@s.SaleID">Update</a></td>
                    <td>
                        <a asp-action="DeleteSale" asp-route-id="@s.SaleID"
                           onclick="return confirm('Are you sure you want to delete this sale?')">Delete</a>
                    </td>
                </tr>
            }
        </table>
    }
</div>