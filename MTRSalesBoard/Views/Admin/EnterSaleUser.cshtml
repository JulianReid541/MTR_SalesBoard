@model List<AppUser>
@{
    ViewData["Title"] = "Sale Entry";
    Layout = "_AdminLayout";
}

<div class="text-center">
    @if (Model.Count() == 0) {
        <div>There are no users available</div>
    }
    else {
        <h2>Who are you entering a sale for?</h2>
        <table class="table table-striped" style="width:100%">
            <tr class="thead-dark">
                <th>Username</th>
                <th>Name</th>
            </tr>
            @foreach (AppUser u in Model) {
                <tr>
                    <td><a href="" data-toggle="modal" data-target="#@u.UserName">@u.UserName</a></td>
                    <td>@u.Name</td>
                </tr>
            }
        </table>
    }
</div>

@foreach (AppUser u in Model) {
    <partial name="_AdminSaleEntryModalPartial" model="@new SaleEntryViewModel() { Name = u.UserName}" {u.UserName} />
}


