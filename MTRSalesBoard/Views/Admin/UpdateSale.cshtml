@model UpdateSaleViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Update Sale";
}

<div style="padding-left: 40%;">
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.SaleAmount">SaleAmount</label><br />
            <input class="form-control col-4" asp-for="@Model.SaleAmount" value="@Model.SaleAmount" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Date">Sale Date</label><br />
            <input class="form-control col-4" asp-for="@Model.Date" value="@Model.Date" type="text" />
        </div>
        <input asp-for="@Model.Id" value="@Model.Id" type="hidden" />
        <div style="padding-left: 11%;">
            <input class="btn btn-danger" type="submit" value="Enter" />
        </div>
    </form>
    <br />
    <p class="text-muted text-decoration-none" style="padding-left: 10%;">
        <a asp-controller="Admin" asp-action="ViewUserSale">Back to List</a>
    </p>
</div>
<div asp-validation-summary=" All" class="text-danger"></div>