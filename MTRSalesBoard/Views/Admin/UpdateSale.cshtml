@model MTRSalesBoard.Models.Sale
@{
    ViewData["Title"] = "Update Sale";
    Layout = "_AdminLayout";
}

<div style="padding-left: 40%;">
    <form method="post">
        <div class="form-group">
            <label for="SaleAmount">SaleAmount</label><br />
            <input class="form-control col-4" name="saleamount" value="@Model.SaleAmount" />
        </div>
        <div class="form-group">
            <label for="date">Sale Date</label><br />
            <input class="form-control col-4" name="date" value="@Model.SaleDate" />
        </div>
        <input name="name" value="@Model.Name" type="hidden" />
        <input name="saleid" value="@Model.SaleID" type="hidden" />
        <div>
            <input class="btn btn-danger" type="submit" value="Enter" />
        </div>
    </form>

    <br />
    <p class="text-muted text-decoration-none" style="padding-left: 10%;">
        <a asp-controller="Admin" asp-action="ViewUserSale">Back to List</a>
    </p>
</div>