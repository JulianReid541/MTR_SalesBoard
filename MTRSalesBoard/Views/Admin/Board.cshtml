@model List<AppUser>
@{
    ViewData["Title"] = "Sales Board";
    Layout = "_AdminLayout";
}

@if (Model.Count > 0) {
    <div class="text-center row">
        <table class="table table-striped thead-dark table-bordered" style="width:100%">
            <thead>
                <tr class="thead-dark">
                    <partial name="_BoardHeaderPartial" />
                </tr>
            </thead>
            <tbody>
                @foreach (AppUser u in Model) {
                    <tr>
                        <partial name="_UserCalcsPartial" model=u />
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row text-center">
        <div class="col-lg-4">
            <div class="font-weight-bold">Last Month: @ViewBag.LastMonthAll</div>
        </div>
        <div class="col-lg-4">
            <div class="font-weight-bold">Current Month: @ViewBag.CurrentMonthAll</div>
        </div>
        <div class="col-lg-4">
            <div class="font-weight-bold">Month Last Year: @ViewBag.LastYearMonthAll</div>
        </div>
    </div>
}
else {
    <div>
        <h1>No sales have been entered yet</h1>
    </div>
}

