@model List<AppUser>
@{
    ViewData["Title"] = "Sales Board";
}

<div class="text-center">
    @if (Model.Count > 0) {
        <table class="table table-striped thead-dark table-bordered" style="width:100%">
            <thead>
                <tr class="thead-dark">
                    <partial name="_BoardHeaderPartial" />
                </tr>
            </thead>
            <tbody>
                @foreach (AppUser u in Model) {
                    <tr>
                        <partial name="_UserCalcsPartial" model=u />
                    </tr>
                }
            </tbody>
        </table>
    }
    else {
        <div>
            <h1>No sales have been entered yet</h1>
        </div>
    }
</div>
